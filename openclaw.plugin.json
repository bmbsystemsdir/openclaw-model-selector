{
  "id": "openclaw-model-selector",
  "kind": "extension",
  "version": "3.0.0",
  "description": "Smart model routing with collaboration support: suggest → confirm → coordinate → execute → auto-return",
  "uiHints": {
    "enabled": {
      "label": "Enabled",
      "help": "Enable/disable automatic model selection"
    },
    "announceSwitch": {
      "label": "Announce Switch",
      "help": "Announce when switching models"
    },
    "announceSuggestion": {
      "label": "Announce Suggestion",
      "help": "Announce model suggestions before approval"
    },
    "defaultModel": {
      "label": "Default Model",
      "placeholder": "gemini-flash",
      "help": "The default model for all conversations (returns here after task completion)"
    },
    "collaborationChannel": {
      "label": "Collaboration Channel",
      "placeholder": "1468402814106468402",
      "help": "Channel ID where agents coordinate model selection for diversity"
    },
    "agentId": {
      "label": "Agent ID",
      "placeholder": "steve",
      "help": "This agent's identifier for collaboration coordination"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "enabled": { "type": "boolean" },
      "announceSwitch": { "type": "boolean" },
      "announceSuggestion": { "type": "boolean" },
      "defaultModel": { "type": "string" },
      "collaborationChannel": { 
        "type": "string",
        "description": "Channel ID for agent collaboration (model diversity coordination)"
      },
      "agentId": { 
        "type": "string",
        "description": "This agent's identifier (e.g., 'steve' or 'dexter')"
      },
      "models": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "simple": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "planning": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "complex": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "coding": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          }
        }
      },
      "modelComplements": {
        "type": "object",
        "additionalProperties": { "type": "string" },
        "description": "Map of models to their complements for collaboration diversity"
      },
      "fallbackChain": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Fallback models when rate limits are hit"
      },
      "approvalTriggers": {
        "type": "array",
        "items": { "type": "string" }
      },
      "overrideTriggers": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  }
}
